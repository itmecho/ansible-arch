[colours]
background = #2e3440
background-alt = #ED3A53
text = #d8dee9
text-alt = #4c566a
primary = #1C446E
alert = #bf616a

red = #bf616a
green = #a3be8c
yellow = #ebcb8b
blue = #5e81ac
purple = #b48ead
teal = #88c0d0

[bar/main]
monitor = ${env:MONITOR:}
enable-ipc = true

modules-left = date cpu memory filesystem {% if is_work %}vpn alerts {% endif %}updates updates-loop
modules-right = music pulseaudio{% if is_work %} battery{% endif %}

background = ${colours.background}
foreground = ${colours.text}

border-size = 10
border-color = ${colours.background}

tray-position = right
tray-padding = 5

font-0 = Roboto:size=12;3
font-1 = "Hack Nerd Font Mono:size=18;5"

line-size = 0

module-margin-left = 2
module-margin-right = 2

[bar/secondary]
monitor = ${env:MONITOR:}
modules-left = date

background = ${colours.background}
foreground = ${colours.text}

border-size = 10
border-color = ${colours.background}

font-0 = Roboto:size=12;3
font-1 = "Hack Nerd Font Mono:size=18;5"

line-size = 0

module-margin-left = 2
module-margin-right = 2

[module/music]
type = custom/script
interval = 1
exec = playerctl status &>/dev/null && playerctl metadata -f "   {{'{{'}}artist{{'}}'}} - {{'{{'}}title{{'}}'}}"

[module/date]
type = internal/date
interval = 1.0
label = "  %{F#1793d1} %{F-} %date% %time%    "

date = %a %d %b
time = %H:%M:%S

date-alt = %Y-%m-%d
time-alt = %H:%M:%S

format-foreground = ${colours.text}

[module/cpu]
type = internal/cpu
label =   %percentage-sum%%
interval = 3

[module/memory]
type = internal/memory
label =   %percentage_used%%
interval = 3

[module/filesystem]
type = internal/fs

mount-0 = /
interval = 10
fixed-values = true
label-mounted =   %percentage_used%%

[module/battery]
type = internal/battery

format-charging = <label-charging>
format-discharging = <label-discharging>
format-foreground = ${colours.green}

label-charging = ﮣ %percentage%%
label-discharging =   %percentage%%
label-full =   %percentage%%

[module/github]
type = internal/github

token = 7a89dbb5a935fdbfd7f890c557cfab3ff2b37ee8

user = itmecho

empty-notifications = false

interval = 10


[module/pulseaudio]
type = internal/pulseaudio

sink = bluez_sink.E8_07_BF_19_EF_09.a2dp_sink

use-ui-max = true

label-volume = 墳 %percentage%%
format-foreground = ${colours.blue}

[module/alerts]
type = custom/script

exec = bash ~/.config/polybar/grafana_alerts.sh
interval = 300

[module/vpn]
type = custom/ipc
hook-0 = bash ~/.config/polybar/vpn.sh
initial = 1

click-left = alacritty -e nmcli con up id "Boomi Flow" --ask && sleep 1 && polybar-msg hook vpn 1 &>/dev/null
click-right = alacritty -e nmcli con down id "Boomi Flow" && sleep 1 && polybar-msg hook vpn 1 &>/dev/null

[module/updates]
type = custom/ipc
hook-0 = bash ~/.config/polybar/checkupdates.sh

click-left = alacritty -e yay -Syu && sleep 1 && polybar-msg hook updates 1 &>/dev/null

[module/updates-loop]
type = custom/script
exec = polybar-msg hook updates 1 &>/dev/null
interval = 3600

